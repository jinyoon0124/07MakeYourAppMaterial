<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/list_layout_margin"
    android:layout_marginRight="@dimen/list_layout_margin"
    android:layout_marginTop="@dimen/list_layout_margin"
    android:layout_marginBottom="@dimen/list_layout_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardElevation="@dimen/cardview_elevation_resting"
    android:stateListAnimator="@anim/cardview_state_list_anim"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/photo_placeholder"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/photo_background_protection"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/article_title"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/text_color_main_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/list_article_padding_normal"
                android:paddingTop="@dimen/list_article_padding_normal"
                android:paddingRight="@dimen/list_article_padding_normal"
                android:paddingBottom="@dimen/list_article_title_padding_bottom"
                android:ellipsize="end"
                android:maxLines="3" />

            <TextView
                android:id="@+id/article_subtitle"
                style="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/text_color_main_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/list_article_padding_normal"
                android:paddingRight="@dimen/list_article_padding_normal"
                android:paddingBottom="@dimen/list_article_subtitle_padding_bottom"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end" />
        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>

